{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES6",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib" : ["dom", "es6"],
        "typeRoots" : ["./node_modules/@types","./@types"],
        "types": ["vue", "modernizr", "modernizr-config"]
    },
    "include": [
        "./src/**/*"
    ]
}
